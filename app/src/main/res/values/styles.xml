<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorHint">@color/secondary_text_white</item>
        <item name="colorControlNormal">@color/secondary_text_white</item>
        <item name="colorControlActivated">@color/secondary_text_white</item>
        <item name="colorControlHighlight">@color/secondary_text_white</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="AppTheme">
        <item name="android:statusBarColor">@color/secondary_text_white</item>
    </style>

    <style name="AppTheme.Onboarding" parent="AppTheme">
        <item name="android:editTextColor">@color/secondary_text_white</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>
</resources>
